version: 2
updates:
  - package-ecosystem: "github-actions"
    directory: "/"
    schedule:
      interval: "weekly"
      time: "04:00"
    commit-message:
      prefix: "Deps"
    groups:
      dependencies:
        patterns:
          - "*"
{% for directory in github_action_dirs %}
  - package-ecosystem: "github-actions"
    directory: "/{{directory}}"
    schedule:
      interval: "weekly"
      time: "04:00"
    commit-message:
      prefix: "Deps"
    groups:
      dependencies:
        patterns:
          - "*"
{% endfor %}
  - package-ecosystem: pip
    directories:{% for directory in python_project_dirs %}
      - "/{{ directory }}/"{% endfor %}
    schedule:
      interval: "weekly"
      time: "04:00"
    open-pull-requests-limit: 10
    allow:
      - dependency-type: direct
      - dependency-type: indirect
    commit-message:
      prefix: "Deps"
    groups:
      dependencies:
        patterns:
          - "*"
